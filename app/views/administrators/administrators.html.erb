<div class="grid-row">
  <div class="column-two-thirds">
    <a href="<%= programme_path %>" class="link-back">Back</a>
    <h1 class="heading-large"><%= t('admin_users_label') %></h1>
    <%= form_for @form, url: administrators_path, html: { novalidate: true } do |f| %>
        <fieldset class="form-group <%= 'form-group-error' if @form.errors.include?(:admin_users) %>">
          <legend>
            <p>
              Your account will be created with an administrative role so it can be bootstrapped.
              Please specify the GDS emails of the users who should initially be able to assume this role.
            </p>
            <p>
              Separate entries by new lines.
            </p>
          </legend>
          <%= f.text_area :admin_users, value: @form.admin_users, required: true, rows: 6, cols: 60, style: 'width: 100%', class: 'form-control' %>
          <% @form.errors[:admin_users].each do |err| %>
              <span class="error-message"><%= "#{t('admin_users_label')} #{err}" %></span>
          <% end %>
        </fieldset>
        <div>
          <%= f.submit t('next_button_text'), class: 'button' %>
        </div>
    <% end %>
  </div>
</div>

