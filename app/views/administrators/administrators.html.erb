<div class="grid-row">
  <div class="column-two-thirds">
    <h1 class="heading-large">Request an AWS account</h1>
    <%= form_for @form, url: administrators_path, html: { novalidate: true } do |f| %>
        <fieldset class="form-group">
          <%= f.label :admin_users, t('admin_users_label'), class: 'form-label' %>
          <%= f.text_area :admin_users, required: true, rows: 6, class: 'form-control' %>
        </fieldset>
        <div>
          <%= f.submit t('submit_button_text'), class: 'button' %>
        </div>
    <% end %>
  </div>
</div>

