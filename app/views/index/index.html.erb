<div class="grid-row">
  <div class="column-two-thirds">
    <h1 class="heading-large">Request an AWS account</h1>
    <%= form_for @form, url: '/', html: { novalidate: true } do |f| %>
        <fieldset class="form-group">
          <%= f.label :account_name, t('account_name_label'), class: 'form-label' %>
          <%= f.text_field :account_name, required: true, class: 'form-control' %>
        </fieldset>
        <fieldset class="form-group">
          <legend><p><%= t('programme_label') %></p></legend>

          <div class="multiple-choice">
            <%= f.radio_button :programme, 'GOV.UK', id: 'programme_govuk', required: true %>
            <%= f.label :programme, 'GOV.UK', for: 'programme_govuk'  %>
          </div>
          <div class="multiple-choice">
            <%= f.radio_button :programme, 'GOV.UK Verify', id: 'programme_verify', required: true %>
            <%= f.label :programme,  'GOV.UK Verify', for: 'programme_verify' %>
          </div>
          <div class="multiple-choice">
            <%= f.radio_button :programme, 'Government as a Platform', id: 'programme_gaap', required: true %>
            <%= f.label :programme,  'Government as a Platform', for: 'programme_gaap' %>
          </div>
          <div class="multiple-choice">
            <%= f.radio_button :programme, 'Technology and Operations', id: 'programme_tech_ops', required: true %>
            <%= f.label :programme,  'Technology and Operations', for: 'programme_tech_ops' %>
          </div>
          <div class="multiple-choice">
            <%= f.radio_button :programme, 'Other', id: 'programme_other', required: true %>
            <%= f.label :programme,  'Other', for: 'programme_other' %>
          </div>
        </fieldset>
        <div class="form-group">
          <%= f.label :programme, t('programme_label'), class: 'form-label' %>
          <%= f.text_field :programme, required: true, class: 'form-control' %>
        </div>
        <fieldset class="form-group">
          <%= f.label :admin_users, t('admin_users_label'), class: 'form-label' %>
          <%= f.text_area :admin_users, required: true, rows: 6, class: 'form-control' %>
        </fieldset>
        <fieldset class="form-group inline">
          <legend><p><%= t('is_production_label') %></p></legend>

          <div class="multiple-choice">
            <%= f.radio_button :is_production, '1', id: 'is_production_yes', required: true %>
            <%= f.label :is_production,  t('is_production_yes_label'), for: 'is_production_yes' %>
          </div>
          <div class="multiple-choice">
            <%= f.radio_button :is_production, '0', id: 'is_production_no', required: true %>
            <%= f.label :is_production, t('is_production_no_label'), for: 'is_production_no'  %>
          </div>
        </fieldset>
        <div>
          <%= f.submit t('submit_button_text'), class: 'button' %>
        </div>
    <% end %>
  </div>
</div>

