<div class="grid-row">
  <div class="column-two-thirds">
    <h1>Request an AWS account</h1>
    <%= form_for @form, url: '/' do |f| %>
        <div class="form-group">
          <fieldset>
            <%= f.label :account_name, t('account_name_label') %>
            <%= f.text_field :account_name, required: true %>
          </fieldset>
        </div>
        <div class="form-group">
          <fieldset>
            <%= f.label :programme, t('programme_label') %>
            <%= f.text_field :programme, required: true %>
          </fieldset>
        </div>
        <div class="form-group">
          <fieldset>
            <%= f.label :admin_users, t('admin_users_label') %>
            <%= f.text_field :admin_users, required: true %>
          </fieldset>
        </div>
        <div class="form-group">
          <fieldset>
            <%= f.label :is_production,  t('is_production_yes_label'), for: 'is_production_yes' %>
            <%= f.radio_button :is_production, '1', id: 'is_production_yes', required: true %>
            <%= f.label :is_production, t('is_production_no_label'), for: 'is_production_no'  %>
            <%= f.radio_button :is_production, '0', id: 'is_production_no', required: true %>
          </fieldset>
        </div>
        <div>
          <%= f.submit t('submit_button_text'), class: 'button' %>
        </div>
    <% end %>
  </div>
</div>

